<% content_for :page_title, "LIBRARY" %>
<% content_for :show_tabs, true %>

<div data-controller="share">

<div class="library-actions">
  <div class="add-dropdown" data-controller="dropdown">
    <div class="add-project-btn" id="add-project-btn" data-action="click->dropdown#toggle">
      Upload
      <svg width="10" height="10" viewBox="0 0 10 10" fill="none" style="margin-left: 6px;">
        <path d="M2 3.5L5 6.5L8 3.5" stroke="currentColor" stroke-width="1.5"/>
      </svg>
    </div>
    <div class="menu-dropdown add-menu" data-dropdown-target="menu">
      <button class="menu-item" id="add-files-btn">Select files</button>
      <button class="menu-item" id="add-folder-btn-upload">Select folder</button>
    </div>
  </div>
  <button class="add-folder-btn" id="add-folder-btn">
    + New folder
  </button>
</div>

<%= form_with model: Asset.new, id: "upload-form" do |f| %>
  <%= f.file_field :file, class: "file-input", id: "file-input", direct_upload: true, multiple: true %>
  <input type="file" class="file-input" id="folder-input" webkitdirectory directory multiple data-direct-upload-url="<%= rails_direct_uploads_url %>">

  <div id="file-details" style="display: none;">
    <p id="selected-file-title" style="text-align: center; margin-bottom: 10px;"></p>
    <%= f.text_field :title, placeholder: "Title", class: "project-title-input", id: "project-title-input" %>
    <%= f.submit "Upload", class: "upload-btn" %>
  </div>
<% end %>

<div class="drop-zone" id="drop-zone" data-controller="file-drag" data-file-drag-move-url-value="<%= library_move_asset_path %>">
  <% if @assets.any? %>
    <div class="projects-grid">
      <% @assets.each do |asset| %>
        <%
          # Determine file type for drag/drop logic
          file_type = if asset.is_directory?
            'directory'
          elsif asset.file.attached?
            File.extname(asset.file.filename.to_s).delete('.').downcase
          else
            'unknown'
          end
          # Treat extracted ZIPs (files with children) as directories for drop purposes
          acts_as_directory = asset.is_directory? || asset.children.any?
        %>
                <div class="project-card-wrapper <%= 'processing' if asset.processing_status.present? %>"
             draggable="<%= asset.processing_status.present? ? 'false' : 'true' %>"
             data-file-id="<%= asset.id %>"
             data-file-type="<%= file_type %>"
             data-is-directory="<%= acts_as_directory %>"
             data-action="dragstart->file-drag#dragStart dragend->file-drag#dragEnd dragover->file-drag#dragOver dragleave->file-drag#dragLeave drop->file-drag#drop"
             <% if asset.processing_status.present? %>
             data-controller="processing-status"
             data-processing-status-asset-id-value="<%= asset.id %>"
             <% end %>>

          <% if asset.processing_status.present? %>
            <!-- Processing overlay -->
            <div class="processing-overlay">
              <div class="processing-spinner"></div>
              <span class="processing-text" data-processing-text>
                <% if asset.processing_status == 'extracting' %>
                  Extracting... <%= asset.processing_progress %>/<%= asset.processing_total %>
                <% else %>
                  Saving... <%= asset.processing_progress %>/<%= asset.processing_total %>
                <% end %>
              </span>
              <div class="processing-bar">
                <% percent = asset.processing_total > 0 ? (asset.processing_progress.to_f / asset.processing_total * 100).round : 0 %>
                <div class="processing-bar-fill" data-processing-bar style="width: <%= percent %>%"></div>
              </div>
            </div>
          <% end %>

          <% if asset.folder? %>
            <%# Empty folder - clickable to browse inside %>
            <%= link_to asset_path(asset), class: "project-card" do %>
              <div class="project-icon">
                <%= image_tag asset_icon_for(asset), class: "icon-image" %>
              </div>
              <p title="<%= full_asset_name(asset) %>"><%= truncated_asset_name(asset) %></p>
            <% end %>
          <% elsif asset.file.attached? && asset.children.any? %>
            <%# Asset has extracted contents - clickable to browse inside %>
            <%= link_to asset_path(asset), class: "project-card" do %>
              <div class="project-icon">
                <%= image_tag asset_icon_for(asset), class: "icon-image" %>
              </div>
              <p title="<%= full_asset_name(asset) %>"><%= truncated_asset_name(asset) %></p>
            <% end %>
          <% elsif asset.file.attached? %>
            <% ext = File.extname(asset.file.filename.to_s).downcase.delete(".") %>
            <% if %w[wav mp3 aif aiff flac m4a].include?(ext) %>
              <%# Audio file - clickable to play %>
              <div class="project-card"
                   data-audio-url="<%= url_for(asset.file) %>"
                   data-audio-title="<%= full_asset_name(asset) %>">
                <div class="project-icon project-icon-playable">
                  <%= image_tag asset_icon_for(asset), class: "icon-image" %>
                  <div class="project-icon-play-overlay">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
                <p title="<%= full_asset_name(asset) %>"><%= truncated_asset_name(asset) %></p>
              </div>
            <% else %>
              <%# Other single file - not clickable %>
              <div class="project-card">
                <div class="project-icon">
                  <%= image_tag asset_icon_for(asset), class: "icon-image" %>
                </div>
                <p title="<%= full_asset_name(asset) %>"><%= truncated_asset_name(asset) %></p>
              </div>
            <% end %>
          <% else %>
            <%# No file attached - just display %>
            <div class="project-card">
              <div class="project-icon">
                <%= image_tag asset_icon_for(asset), class: "icon-image" %>
              </div>
              <p title="<%= full_asset_name(asset) %>"><%= truncated_asset_name(asset) %></p>
            </div>
          <% end %>

          <%# Three-dot menu for actions - hide during processing %>
          <% unless asset.processing_status.present? %>
          <div class="card-menu" data-controller="dropdown">
            <button class="menu-trigger" data-action="click->dropdown#toggle">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                <circle cx="3" cy="8" r="1.5"/>
                <circle cx="8" cy="8" r="1.5"/>
                <circle cx="13" cy="8" r="1.5"/>
              </svg>
            </button>
            <div class="menu-dropdown" data-dropdown-target="menu">
              <!-- Share submenu -->
              <div class="menu-item-with-submenu">
                <button class="menu-item menu-item-parent" data-action="click->dropdown#toggleSubmenu">
                  <span>Share</span>
                  <svg width="12" height="12" viewBox="0 0 12 12" fill="currentColor">
                    <path d="M4.5 2L8.5 6L4.5 10" stroke="currentColor" stroke-width="1.5" fill="none"/>
                  </svg>
                </button>
                <div class="submenu">
                  <div class="submenu-inner">
                    <button class="menu-item" data-action="click->share#open" data-asset-id="<%= asset.id %>">
                      Create a link
                    </button>
                  </div>
                </div>
              </div>

              <button class="menu-item"
                      onclick="document.dispatchEvent(new CustomEvent('handa:start-download', { detail: { assetId: <%= asset.id %>, filename: '<%= j(asset.title) %>' } }))">
                Download
              </button>

              <%= button_to "Duplicate", duplicate_asset_path(asset), method: :post, class: "menu-item", form: { data: { turbo: false } } %>

              <button class="menu-item" data-action="click->rename#open" data-asset-id="<%= asset.id %>" data-asset-title="<%= asset.title %>">
                Rename
              </button>

              <!-- Share with submenu -->
              <%= render 'shared/share_with_submenu', asset: asset %>

              <div class="menu-divider"></div>

              <%= link_to "Delete", asset_path(asset),
                  data: { turbo_method: :delete, turbo_confirm: "Delete '#{asset.title}'? This cannot be undone." },
                  class: "menu-item menu-item-danger" %>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="empty-state">Drag & drop files here or use the button above</p>
  <% end %>
</div>

<!-- Right-click Context Menu -->
<div id="context-menu" class="context-menu">
  <button class="context-menu-item" id="context-new-folder">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
      <line x1="12" y1="11" x2="12" y2="17"></line>
      <line x1="9" y1="14" x2="15" y2="14"></line>
    </svg>
    New Folder
  </button>
</div>

<!-- New Folder Modal -->
<div id="folder-modal" class="modal-overlay">
  <div class="modal-content">
    <h3>Create New Folder</h3>
    <%= form_with url: create_folder_assets_path, method: :post, class: "folder-form" do %>
      <input type="text" name="folder_name" placeholder="Folder name" class="folder-name-input" id="folder-name-input" required>
      <div class="modal-actions">
        <button type="button" class="cancel-btn" id="cancel-folder">Cancel</button>
        <button type="submit" class="save-btn">Create</button>
      </div>
    <% end %>
  </div>
</div>

<!-- Rename Modal -->
<div id="rename-modal" class="modal-overlay" data-controller="rename">
  <div class="modal-content">
    <h3>Rename</h3>
    <form id="rename-form" data-action="submit->rename#submit">
      <input type="hidden" id="rename-asset-id" data-rename-target="assetId">
      <input type="text" name="title" placeholder="New name" class="folder-name-input" id="rename-input" data-rename-target="input" required>
      <div class="modal-actions">
        <button type="button" class="cancel-btn" data-action="click->rename#close">Cancel</button>
        <button type="submit" class="save-btn">Save</button>
      </div>
    </form>
  </div>
</div>

<!-- Who Has Access Modal -->
<div id="access-modal" class="modal-overlay" data-controller="access">
  <div class="modal-content">
    <h3>Who has access</h3>
    <div class="access-list" data-access-target="list">
      <div class="access-item">
        <div class="access-avatar">
          <span><%= current_user.username.first.upcase %></span>
        </div>
        <div class="access-info">
          <span class="access-name"><%= current_user.username %> (you)</span>
          <span class="access-role">Owner</span>
        </div>
      </div>
      <p class="access-empty">Only you have access to this file.</p>
    </div>
    <div class="modal-actions">
      <button type="button" class="cancel-btn" data-action="click->access#close" style="flex: none; width: 100%;">Done</button>
    </div>
  </div>
</div>

<!-- Share Link Modal -->
<div id="share-modal" class="modal-overlay" data-share-target="modal" data-action="click->share#clickOutside">
  <div class="modal-content">
    <h3>Share Link</h3>

    <!-- Create Form -->
    <div data-share-target="createForm">
      <div class="share-form-field">
        <label>Password (optional)</label>
        <input type="password" placeholder="Leave blank for no password" class="folder-name-input" data-share-target="passwordField">
      </div>

      <div class="share-form-field">
        <label>Expires (optional)</label>
        <select class="folder-name-input" data-share-target="expiresField">
          <option value="">Never</option>
          <option value="1_hour">1 hour</option>
          <option value="24_hours">24 hours</option>
          <option value="7_days">7 days</option>
          <option value="30_days">30 days</option>
        </select>
      </div>

      <div class="modal-actions">
        <button type="button" class="cancel-btn" data-action="click->share#close">Cancel</button>
        <button type="button" class="save-btn" data-action="click->share#createLink">Create Link</button>
      </div>
    </div>

    <!-- Link Display (shown after creation) -->
    <div data-share-target="linkDisplay" class="hidden">
      <div class="share-link-display">
        <input type="text" readonly class="share-link-input" data-share-target="url">
        <button type="button" class="copy-btn" data-action="click->share#copyLink" data-share-target="copyBtn">Copy</button>
      </div>
      <div class="modal-actions">
        <button type="button" class="save-btn" data-action="click->share#close" style="width: 100%;">Done</button>
      </div>
    </div>
  </div>
</div>

</div> <!-- Close share controller wrapper -->

<%# Auto-play audio from notification click %>
<% if params[:highlight].present? %>
<script>
  // Run immediately since Turbo has already loaded the page
  (function() {
    const fileId = '<%= params[:highlight] %>';
    const card = document.querySelector(`[data-file-id="${fileId}"]`);
    if (card) {
      // Scroll into view
      card.scrollIntoView({ behavior: 'smooth', block: 'center' });

      // Find the audio element and click it to trigger playback
      const audioElement = card.querySelector('[data-audio-url]');
      if (audioElement) {
        // Small delay to let scroll complete
        setTimeout(() => audioElement.click(), 300);
      }
    }
  })();
</script>
<% end %>
