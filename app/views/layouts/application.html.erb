<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:page_title) ? "#{yield(:page_title)} - handa" : "handa" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : "File sharing, built for music." %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Open Graph meta tags for rich link previews %>
    <meta property="og:site_name" content="handa">
    <meta property="og:title" content="<%= content_for?(:og_title) ? yield(:og_title) : "handa" %>">
    <% if content_for?(:og_image) %>
      <meta property="og:image" content="<%= yield(:og_image) %>">
    <% end %>

    <%= favicon_link_tag "handa-favicon.png" %>

    <%# Apple device icons and web app settings %>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="handa">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>

    <%# Structured data for search engines %>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "handa",
      "url": "https://handa.app",
      "description": "File sharing, built for music.",
      "applicationCategory": "MultimediaApplication",
      "operatingSystem": "Web",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      }
    }
    </script>
  </head>

  <body>
    <header class="site-header">
      <%= link_to root_path do %>
        <%= image_tag "handa-logo.png", class: "logo", alt: "handa" %>
      <% end %>

      <% if user_signed_in? %>
        <% if content_for?(:show_tabs) %>
          <div class="nav-tabs">
            <%= link_to "LIBRARY", root_path, class: "nav-tab #{'active' if controller_name == 'library'}" %>
            <% if controller_name == 'search' %>
              <%= link_to "SEARCH", search_path, class: "nav-tab active" %>
            <% elsif controller_name == 'profile' %>
              <%= link_to "PROFILE", profile_path, class: "nav-tab active" %>
            <% else %>
              <%= link_to "SHARE", quick_shares_path, class: "nav-tab #{'active' if controller_name == 'quick_shares'}" %>
            <% end %>
          </div>
        <% else %>
          <h1 class="nav-title"><%= yield :page_title %></h1>
        <% end %>
      <% end %>

      <div class="user-actions">
        <% if user_signed_in? %>
          <!-- Notification Bell -->
          <div class="notification-wrapper <%= 'active' if controller_name == 'notifications' %>" data-controller="notification-dropdown" data-notification-dropdown-mark-read-url-value="<%= mark_read_notifications_path %>">
            <button class="notification-bell" data-action="click->notification-dropdown#toggle">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              <% unread_count = current_user.notifications.unread.count %>
              <% if unread_count > 0 %>
                <span class="notification-badge" data-notification-dropdown-target="badge"><%= unread_count %></span>
              <% end %>
            </button>

            <div class="notification-dropdown" data-notification-dropdown-target="menu">
              <div class="notification-dropdown-header">Activity</div>
              <div class="notification-dropdown-list">
                <% notifications = current_user.notifications.recent.includes(:actor, :notifiable).limit(20) %>
                <% if notifications.any? %>
                  <% notifications.each do |notification| %>
                    <%
                      # Determine if notification should be clickable and where it links to
                      notification_url = nil
                      if notification.notification_type == 'direct_share' && notification.notifiable&.share_link
                        notification_url = share_link_path(notification.notifiable.share_link.token)
                      end
                    %>
                    <% if notification_url %>
                      <%= link_to notification_url, class: "notification-dropdown-item notification-dropdown-item-link" do %>
                        <div class="notification-avatar">
                          <% if notification.actor&.avatar&.attached? %>
                            <%= image_tag notification.actor.avatar, class: "avatar-image" %>
                          <% elsif notification.actor %>
                            <span class="avatar-placeholder"><%= notification.actor.username[0].upcase %></span>
                          <% else %>
                            <span class="avatar-placeholder">?</span>
                          <% end %>
                        </div>
                        <div class="notification-content">
                          <span class="notification-text">
                            <strong><%= notification.actor_display_name %></strong>
                            shared <strong><%= notification.notifiable&.asset&.title || 'a file' %></strong> with you
                          </span>
                          <span class="notification-time"><%= time_ago_in_words(notification.created_at) %> ago</span>
                        </div>
                      <% end %>
                    <% else %>
                      <%# Determine the link target for clickable notifications %>
                      <% notification_asset = notification.notifiable.is_a?(Asset) ? notification.notifiable : notification.notifiable&.asset %>
                      <%# Link to root asset (the folder) with highlight/play param for the specific file %>
                      <%# Only create link if the asset still exists and belongs to current user %>
                      <% if notification_asset && current_user.assets.exists?(notification_asset.id) %>
                        <% root = notification_asset.root_asset %>
                        <% if root == notification_asset %>
                          <%# Asset is itself the root - link directly %>
                          <% notification_link = asset_path(notification_asset) %>
                        <% else %>
                          <%# Asset is a child - link to root with play param for audio %>
                          <% notification_link = asset_path(root, highlight: notification_asset.id) %>
                        <% end %>
                      <% else %>
                        <% notification_link = nil %>
                      <% end %>

                      <%= link_to (notification_link || "#"), class: "notification-dropdown-item #{'notification-clickable' if notification_link}" do %>
                        <div class="notification-avatar">
                          <% if notification.actor&.avatar&.attached? %>
                            <%= image_tag notification.actor.avatar, class: "avatar-image" %>
                          <% elsif notification.actor %>
                            <span class="avatar-placeholder"><%= notification.actor.username[0].upcase %></span>
                          <% else %>
                            <span class="avatar-placeholder">?</span>
                          <% end %>
                        </div>
                        <div class="notification-content">
                          <span class="notification-text">
                            <strong><%= notification.actor_display_name %></strong>
                            <% case notification.notification_type %>
                            <% when 'collaborator_added' %>
                              added you as a collaborator
                            <% when 'share_link_viewed' %>
                              opened <strong><%= notification.notifiable&.title || 'your share link' %></strong>
                            <% when 'share_link_listened' %>
                              listened to <strong><%= notification.notifiable&.title || 'your audio' %></strong>
                            <% when 'share_link_download' %>
                              <% download_title = notification.notifiable.is_a?(Download) ? notification.notifiable.asset&.title : notification.notifiable&.title %>
                              downloaded <strong><%= download_title || 'a file' %></strong>
                            <% when 'share_link_save' %>
                              saved <strong><%= notification.notifiable&.title || 'a file' %></strong> to their library
                            <% end %>
                          </span>
                          <span class="notification-time"><%= time_ago_in_words(notification.created_at) %> ago</span>
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>
                <% else %>
                  <div class="notification-dropdown-empty">No activity yet</div>
                <% end %>
              </div>
            </div>
          </div>


          <!-- Search Icon -->
          <%= link_to search_path, class: "search-icon #{'active' if controller_name == 'search'}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          <% end %>

          <!-- Profile Icon -->
          <%= link_to profile_path, class: "profile-icon #{'active' if controller_name == 'profile'}" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          <% end %>
        <% end %>
      </div>
    </header>


    <main class="main-content">
      <%= yield %>
    </main>

    <!-- Download Status Bar (bottom-left, persists across Turbo navigation) -->
    <!-- Available for all users (anonymous share link downloads + authenticated) -->
    <div id="download-status"
        class="download-status hidden"
        data-controller="download-status"
        data-turbo-permanent>
      <div class="download-status-content" data-download-status-target="container">
        <div class="download-status-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
        </div>
        <span class="download-status-label" data-download-status-target="label">Preparing</span>
        <div class="download-filename-wrapper">
          <div class="download-filename-track" data-download-status-target="track">
            <span class="download-filename" data-download-status-target="filename">...</span>
            <span class="download-filename download-filename-clone" data-download-status-target="filenameClone">...</span>
          </div>
        </div>
        <span class="download-status-suffix hidden" data-download-status-target="suffix"></span>
        <div class="download-status-bar" data-download-status-target="bar">
          <div class="download-status-bar-fill" data-download-status-target="barFill"></div>
        </div>
        <span class="download-status-progress" data-download-status-target="progress">0/0</span>
        <button class="download-status-btn hidden"
                data-download-status-target="downloadBtn"
                data-action="click->download-status#downloadFile">
          Download
        </button>
        <button class="download-status-close hidden"
                data-download-status-target="closeBtn"
                data-action="click->download-status#hide">
          &times;
        </button>
      </div>
    </div>

    <!-- Audio Player Bar (hidden by default, persists across Turbo navigation) -->
    <div id="audio-player" class="audio-player" data-controller="audio-player" data-turbo-permanent>
      <div class="audio-player-title-row">
        <span class="audio-player-title" data-audio-player-target="title">Track Name</span>
      </div>
      <div class="audio-player-controls">
        <span class="audio-player-time" data-audio-player-target="currentTime">0:00</span>
        <div class="audio-player-waveform" data-audio-player-target="waveform"></div>
        <span class="audio-player-time" data-audio-player-target="duration">0:00</span>
        <button class="audio-player-btn" data-action="click->audio-player#restart" title="Restart">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z"/>
          </svg>
        </button>
        <button class="audio-player-btn" data-action="click->audio-player#togglePlay" data-audio-player-target="playBtn">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </button>
      <div class="audio-player-volume-wrapper">

          <button class="audio-player-volume-btn" data-action="click->audio-player#toggleVolume" data-audio-player-target="volumeBtn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
              <path d="M15.54 8.46a5 5 0 0 1 0 7.07"></path>
              <path d="M19.07 4.93a10 10 0 0 1 0 14.14"></path>
            </svg>
          </button>
          <div class="audio-player-volume-popup" data-audio-player-target="volumePopup">
            <input type="range" class="audio-player-volume" min="0" max="1" step="0.05" value="1"
                   data-action="input->audio-player#setVolume" data-audio-player-target="volume">
          </div>
        </div>
        <button class="audio-player-close" data-action="click->audio-player#close">&times;</button>
      </div>
    </div>

    <!-- Upload Progress Indicator -->
    <div id="upload-progress" class="upload-progress-container">
      <!-- Progress items will be dynamically added here -->
    </div>
  </body>
</html>
