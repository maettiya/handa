<!DOCTYPE html>
<html>
  <head>
    <title>handa</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag "handa-favicon.png" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <header class="site-header">
      <%= link_to root_path do %>
        <%= image_tag "handa-logo.png", class: "logo", alt: "handa" %>
      <% end %>

      <div class="user-actions">
        <% if user_signed_in? %>
          <!-- Notification Bell -->
          <button class="notification-bell">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <span class="notification-badge">3</span>
          </button>

          <!-- Search Icon -->
          <button class="search-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>

          <%= link_to profile_path, class: "profile-icon" do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          <% end %>
        <% end %>
      </div>
    </header>

    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <main class="main-content">
      <%= yield %>
    </main>

    <!-- Upload Progress Indicator -->
    <div id="upload-progress" class="upload-progress-container">
      <div class="upload-progress-info">
        <span id="upload-filename">Uploading...</span>
        <span id="upload-percent">0%</span>
      </div>
      <div class="upload-progress-bar">
        <div id="upload-progress-fill" class="upload-progress-fill"></div>
      </div>
    </div>
  </body>
</html>
